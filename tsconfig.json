{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "jsx": "preserve",
    "lib": ["DOM", "ES2015", "ES2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "include": ["./src/**/*"]
}
